<%- include ("partials/header")%>

<div class="ui main text container segment">
    <div class="ui huge header"> Edit <%= campground.title %> </div>

    <form class="ui form" action="/campgrounds/<%= campground.id %>?_method=PUT" method="post">

        <div class="field">
            <label for="">Title</label>
            <input type="text" name="campground[name]" value="<%= campground.name %>">
        </div>
        <div class="field">
            <label for="">Image</label>
            <input type="text" name="campground[image]" value="<%= campground.image %>">
        </div>
        <div class="field">
            <label for="">Description</label>
            <textarea name="campground[description]"><%= campground.description %></textarea>
        </div>
        <input class="ui green basic button" type="submit">
    </form>
</div>

<%- include ("partials/footer")%>
