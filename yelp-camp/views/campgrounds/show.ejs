<%- include ("../partials/header")%>

<div class="container">

    <aside class="row">
        <div class="col-md-3">
            <p class="lead">Yelp Camp</p>
            <div class="list-group">
                <li class="list-group-item active"> info 1</li>
                <li class="list-group-item"> info 2</li>
                <li class="list-group-item"> info 3</li>
            </div>
        </div>
    </aside>

    <main class="col-md-9">
        <div class="thumbnail">
            <img class="image-responsive" src="<%= campground.image %>" alt="image went wrong">
            <div class="caption">
                <h4 class="pull-right"> $9.00/night</h4>
                <h4><a href=""><%= campground.name %></a></h4>
            </div>
            <div class="description">
                <p><%- campground.description %></p>
            </div>

            <a class="ui yellow basic button" href="/campgrounds/<%= campground.id %>/edit">Edit</a>
            <form id='delete' action="/campgrounds/<%= campground.id %>?_method=DELETE" method="post">
                <button class="ui red basic button">Delete</button>
            </form>
        </div>

        <div class="well">
            <div class="text-right">
                <a class="btn btn-success" href="/campgrounds/<%= campground.id %>/comments/new">Add new Comment</a>
            </div>
            <hr>
            <h3>Comments</h3>
            <div class="row">
                <div class="col-md-12">
                    <% campground.comments.forEach( (comment) => { %>
                        <%= comment.author %>
                        <span class="pull-right"> 10 days ago</span>
                        <p>  <%= comment.text %> </p>
                    <% }) %>
                </div>
            </div>

        </div>
    </main>
</div>

<%- include ("../partials/footer")%>

